import pandas as pd
from plotly import express as px


def pilotly_mapping():
# Dataset'i oku
    df = pd.read_csv('/content/Country_ISO_Average Ready In_Geocultural Region Mini Dataset.csv')

# Choropleth haritasını oluştur
    fig = px.choropleth(
        df,
        locations="ISO-3",
        color="Average Ready In Per Recipe",
        hover_name="Country",
        color_continuous_scale=px.colors.sequential.Plasma,
        range_color=(55.762019230769226,298.47842744291285), #average ready timeların min-max pointi
        color_continuous_midpoint=155, #155 average ready timeların medyanı
        projection="natural earth",
        title="Average Ready In Time per Recipe by Countries"
    )

# Haritayı göster
    fig.show()


pilotly_mapping()
